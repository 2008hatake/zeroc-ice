<icepack>

  <server name="${name}" kind="cpp-icebox" endpoints="default" exe="${ice.dir}/bin/icebox" activation="on-demand">

    <!-- =========================================================== -->
    <!-- Deploys one service named 'Service1' and defined in the     -->
    <!-- service.xml file                                            -->
    <!-- =========================================================== -->
    <include name="Service1" descriptor="service.xml"/>

    <properties>
      <property name="Ice.ThreadPool.Server.Size" value="5"/>
    </properties>

  </server>

</icepack>