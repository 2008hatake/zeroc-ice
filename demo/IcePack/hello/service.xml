<icepack>

  <service name="${name}" entry="HelloService:create">

    <!-- ============================================================= -->
    <!-- Register the service adapter named Hello and the HelloFactory -->
    <!-- object hosted by this service.                                -->
    <!-- ============================================================= -->
    <adapters>
      <adapter name="Hello" endpoints="default">
        <object identity="${name}" type="::Demo::HelloFactory"/>
      </adapter>
    </adapters>

    <!-- ============================================================= -->
    <!-- The HelloFactory object identity is obtained from the         -->
    <!-- Identity property defined here. We defined the identity of    -->
    <!-- the HelloFactory object as the name of the service.           -->
    <!-- ============================================================= -->
    <properties>
      <property name="Identity" value="${name}"/>
    </properties>

    <target name="debug">
      <properties>
        <property name="Ice.Trace.Location" value="1"/>
      </properties>
    </target>

  </service>

</icepack>
